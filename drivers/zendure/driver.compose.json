{
  "name": {
    "en": "2400AC / 800Pro"
  },
  "class": "battery",
  "capabilities": [
    "measure_battery",
    "measure_power",
    "measure_temperature",
    "meter_power.charged",
    "meter_power.discharged",
    "efficiency"
  ],
  "capabilitiesOptions": {
    "meter_power.charged": {
      "title": { "en": "Total charged", "nl": "Totaal opgeladen" }
    },
    "meter_power.discharged": {
      "title": { "en": "Total discharged", "nl": "Totaal ontladen" }
    }
  },
  "platforms": [
    "local"
  ],
  "connectivity": [
    "lan"
  ],
  "images": {
    "small": "{{driverAssetsPath}}/images/small.png",
    "large": "{{driverAssetsPath}}/images/large.png"
  },
  "discovery": "zendure",
  "pair": [
      {
        "id": "loading",
        "template": "loading"
      },
      {
        "id": "list_devices",
        "template": "list_devices",
        "navigation": { "next": "add_devices" },
        "options": { "singular": true }
      },
      {
        "id": "manual_ip"
      },
      {
        "id": "add_devices",
        "template": "add_devices"
      }
    ],
  "energy": {
    "homeBattery": true,
    "meterPowerImportedCapability": "meter_power.charged",
    "meterPowerExportedCapability": "meter_power.discharged"
  },
  "settings": [
    {
      "type": "group",
      "label": {
        "en": "Battery Settings"
      },
      "children": [
        {
          "id": "minsoc_correction",
          "type": "checkbox",
          "label": {
            "en": "Minimum SoC Correction"
          },
          "hint": {
            "en": "Enable correction for minimum state of charge (SoC). When enabled, the device will adjust battery percentage to exclude the minimum state of charge. Helps with efficiency calculations."
          },
          "value": false
        },
        {
          "id": "output_correction",
          "type": "number",
          "label": {
            "en": "Output wattage correction"
          },
          "hint": {
            "en": "Correction for output wattage. When enabled, the device will adjust output wattage with this number of watts. Helps with efficiency calculations."
          },
          "value": 0
        }
      ]
    }
  ]
}
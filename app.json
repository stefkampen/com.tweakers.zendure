{
  "_comment": "This file is generated. Please edit .homeycompose/app.json instead.",
  "id": "com.tweakers.zendure",
  "version": "1.0.5",
  "compatibility": ">=12.4.0",
  "sdk": 3,
  "platforms": [
    "local"
  ],
  "name": {
    "en": "Zendure Local"
  },
  "description": {
    "en": "Local connection for Zendure devices"
  },
  "category": [
    "energy"
  ],
  "brandColor": "#AAAAAA",
  "permissions": [],
  "images": {
    "small": "/assets/images/small.png",
    "large": "/assets/images/large.png"
  },
  "author": {
    "name": "Stef Kampen",
    "email": "stef@stefkampen.nl"
  },
  "source": "https://github.com/stefkampen/com.tweakers.zendure",
  "support": "https://gathering.tweakers.net/forum/list_messages/2306860",
  "flow": {
    "actions": [
      {
        "id": "set-power",
        "title": {
          "en": "Set power"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=zendure"
          },
          {
            "type": "number",
            "name": "power",
            "placeholder": {
              "en": "800"
            },
            "min": -2400,
            "max": 2400,
            "step": 1
          }
        ]
      }
    ]
  },
  "drivers": [
    {
      "name": {
        "en": "Zendure"
      },
      "class": "battery",
      "capabilities": [
        "measure_battery",
        "measure_power",
        "measure_temperature",
        "meter_power.charged",
        "meter_power.discharged"
      ],
      "capabilitiesOptions": {
        "meter_power.charged": {
          "title": {
            "en": "Charged Energy"
          }
        },
        "meter_power.discharged": {
          "title": {
            "en": "Discharged Energy"
          }
        }
      },
      "platforms": [
        "local"
      ],
      "connectivity": [
        "lan"
      ],
      "images": {
        "small": "/drivers/zendure/assets/images/small.png",
        "large": "/drivers/zendure/assets/images/large.png"
      },
      "discovery": "zendure",
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          },
          "options": {
            "singular": true
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ],
      "energy": {
        "homeBattery": true,
        "meterPowerImportedCapability": "meter_power.charged",
        "meterPowerExportedCapability": "meter_power.discharged"
      },
      "settings": [
        {
          "type": "group",
          "label": {
            "en": "Battery Settings"
          },
          "children": [
            {
              "id": "minsoc_correction",
              "type": "checkbox",
              "label": {
                "en": "Minimum SoC Correction"
              },
              "hint": {
                "en": "Enable correction for minimum state of charge (SoC). When enabled, the device will adjust battery percentage to exclude the minimum state of charge. Helps with efficiency calculations."
              },
              "value": false
            }
          ]
        }
      ],
      "id": "zendure"
    }
  ],
  "discovery": {
    "zendure": {
      "type": "mdns-sd",
      "mdns-sd": {
        "name": "zendure",
        "protocol": "tcp"
      },
      "id": "{{name}}"
    }
  }
}